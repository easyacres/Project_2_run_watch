<!-- Menu Section -->
<section id="menu" class="menu">
    <div class="container">
        <div>
            <h2 class="menu-sub-headline">Menu <span class="line">--------</span></h2>
            <h1 class="menu-headline">Our Tasty Menu</h1>
            <a href="/" class="btn cta-btn">Back Home</a>
            <br>
        </div>

        <div class="row">

            {{#each menu}}

            <div class="col-md-3">
                <div class="card text-center" style="width: 25rem;">
                    <img src="{{this.image}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">{{this.name}}</h4>
                        <hr>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text">${{this.price}} <span><i class="fas fa-seedling"></i></span>{{this.tags}}
                        </p>
                    </div>
                    <button class="addToCart" data-price="{{this.price}}" data-name="{{this.name}}">Add to cart</button>
                </div>
            </div>

            {{/each}}

            <div class="container">
                <button id="checkout">Checkout</button>
            </div>

            <!-- End Reservations Section -->

</section>